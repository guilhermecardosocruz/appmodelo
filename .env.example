# ==============================
# Database (Neon / Postgres)
# ==============================
DATABASE_URL="postgresql://USER:PASSWORD@HOST/neondb?sslmode=require"

# ==============================
# App
# ==============================
# URL pública usada para montar links (ex.: reset de senha)
APP_URL="https://unie-eventos.com.br"

# ==============================
# E-mail (Resend) - Recuperação de senha
# ==============================
# Gere no painel do Resend: API Keys
RESEND_API_KEY="re_SUA_CHAVE_AQUI"

# Remetente (precisa estar autorizado no Resend / domínio verificado)
# Sugestão: usando seu subdomínio "send" que você configurou no DNS
EMAIL_FROM="UNIE Eventos <contato@send.unie-eventos.com.br>"

# ==============================
# Login com Google (OAuth2)
# ==============================
# Crie uma credencial OAuth no Google Cloud (tipo: Web Application)
# e configure o redirect:
#   APP_URL + /api/auth/google/callback
# Exemplo em produção:
#   https://unie-eventos.com.br/api/auth/google/callback
GOOGLE_CLIENT_ID="SUA_GOOGLE_CLIENT_ID_AQUI"
GOOGLE_CLIENT_SECRET="SUA_GOOGLE_CLIENT_SECRET_AQUI"
