cat > ".env.example" << 'EOF'
# ==============================
# Database (Neon / Postgres)
# ==============================
DATABASE_URL="postgresql://USER:PASSWORD@HOST/neondb?sslmode=require"

# ==============================
# App
# ==============================
# URL pública usada para montar links (ex: recuperação de senha)
APP_URL="https://unie-eventos.com.br"

# ==============================
# Resend (Envio de e-mail)
# ==============================
# Gere em https://resend.com/api-keys
RESEND_API_KEY="sua_resend_api_key_aqui"
EOF

